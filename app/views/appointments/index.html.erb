<h1><%= @doctor.full_name %>: Appointments</h1>
<%= link_to "Add Appointment", new_doctor_appointment_path(@doctor) %>
<hr />

<h2>Surgeon</h2>
<ul>
  <% @surgeons.each do |surgeon| %>
    <li>
      <%= surgeon.user.full_name %>
      <br />
      <%= link_to "Remove", doctor_appointment_path(@doctor, surgeon), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>Nurse</h2>
<ul>
  <% @nurses.each do |nurse| %>
    <li>
      <%= nurse.user.full_name %>
      <br />
      <%= link_to "Remove", doctor_appointment_path(@doctor, nurse), method: :delete %>
    </li>
  <% end %>
</ul>
<h2>Patient</h2>
<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= patient.user.full_name %>
    <li>
  <% end %>
</ul>
